<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/avatarIv"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_default_image_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTvv"
            android:layout_toRightOf="@id/avatarIv"
            android:text="jatin"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentTv"
            android:layout_below="@id/nameTvv"
            android:layout_toEndOf="@id/avatarIv"
            android:text="this is actual comment"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/avatarIv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTv"
            android:textColor="@android:color/black"
            android:text="12/06/2021"
            android:layout_below="@id/commentTv"
            android:layout_toEndOf="@id/avatarIv"
            android:layout_toRightOf="@id/avatarIv"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>